<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.dsckiet.movietails.ui.home.fragment.HomeFragment">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="-4dp"
                android:contentDescription="@string/app_background"
                app:srcCompat="@drawable/ic_path_606" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-16dp"
                android:layout_marginEnd="-16dp"
                android:layout_marginRight="-16dp"
                android:contentDescription="@string/app_background"
                app:srcCompat="@drawable/dark_mode" />

            <TextView
                android:id="@+id/header"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:padding="32dp"
                android:text="@string/hi_what_s_next"
                android:textColor="#fff"
                android:textSize="32sp" />

            <androidx.appcompat.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/header"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:background="#D3B7E3"
                app:queryHint="Search for movies, people &amp; more" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="32dp"
                    android:paddingLeft="32dp"
                    android:paddingTop="32dp"
                    android:paddingRight="32dp"
                    android:paddingBottom="4dp"
                    android:text="@string/discover"
                    android:textColor="@color/detailsLargeText"
                    android:textSize="24sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:padding="8dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_na"
                        android:contentDescription="@string/upcoming_movies" />
                </androidx.cardview.widget.CardView>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                app:cardMaxElevation="8dp">

                                <ImageView
                                    android:layout_width="280dp"
                                    android:layout_height="400dp"
                                    android:contentDescription="@string/small_list_movie_img"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/placeholder_mimg" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="240dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/roboto_medium"
                                android:padding="8dp"
                                android:text="@string/sl_movie_title_1"
                                android:textAlignment="center"
                                android:textColor="@color/detailsLargeText"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                app:cardMaxElevation="8dp">

                                <ImageView
                                    android:layout_width="280dp"
                                    android:layout_height="400dp"
                                    android:contentDescription="@string/small_list_movie_img"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/placeholder_mimg" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="240dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/roboto_medium"
                                android:padding="8dp"
                                android:text="@string/sl_movie_title_1"
                                android:textAlignment="center"
                                android:textColor="@color/detailsLargeText"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                app:cardMaxElevation="8dp">

                                <ImageView
                                    android:layout_width="280dp"
                                    android:layout_height="400dp"
                                    android:contentDescription="@string/small_list_movie_img"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/placeholder_mimg" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="240dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/roboto_medium"
                                android:padding="8dp"
                                android:text="@string/sl_movie_title_1"
                                android:textAlignment="center"
                                android:textColor="@color/detailsLargeText"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                app:cardMaxElevation="8dp">

                                <ImageView
                                    android:layout_width="280dp"
                                    android:layout_height="400dp"
                                    android:contentDescription="@string/small_list_movie_img"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/placeholder_mimg" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="240dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/roboto_medium"
                                android:padding="8dp"
                                android:text="@string/sl_movie_title_1"
                                android:textAlignment="center"
                                android:textColor="@color/detailsLargeText"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="32dp"
                    android:paddingLeft="32dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="32dp"
                    android:paddingBottom="8dp"
                    android:text="@string/top_trending"
                    android:textColor="@color/detailsLargeText"
                    android:textSize="24sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_main_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="280dp"
                    android:padding="12dp"
                    tools:listitem="@layout/details_list_item" />
                <!--                Change Recycler View layout_width => wrap_content
                                    after connecting with network interface & setting the
                                    adapter with it.-->
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="320dp"
                            android:layout_height="200dp"
                            android:padding="4dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/img_na"
                                android:contentDescription="@string/top_rated_movies" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="320dp"
                            android:layout_height="200dp"
                            android:padding="4dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/img_na"
                                android:contentDescription="@string/upcoming_movies" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</layout>