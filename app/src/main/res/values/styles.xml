<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--        Base Theme changed from AppCompat to Material Components-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        Theme.MaterialComponents.Light.NoActionBar-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ExpandedToolbarTextStyle">
        <item name="android:textSize">1sp</item>
    </style>

    <style name="CollapsedToolbarTextStyle">
        <item name="android:textColor">@color/detailsLargeText</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>